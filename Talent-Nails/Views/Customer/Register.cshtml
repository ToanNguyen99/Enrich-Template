@using Commerce.UI.Models.Customer
@model RegisterModel

@{
    ViewBag.Title = "Register";
    //Layout = null;
}
<link href="~/Themes/HomePage/Content/css/Login.css" rel="stylesheet" />
<section>
    <div class="contacts__form">
        <div class="container">
            <div class="contacts__form__title">Register</div>
            @using (Ajax.BeginForm("Register", "customer",
                new AjaxOptions
                {
                    HttpMethod = "POST",
                    OnSuccess = "onRegisterSuccess"
                },
                new
                {
                    enctype = "multipart/form-data",
                    @id = "contact",
                    @autocomplete = "off",
                    @class = "form-horizontal auth-form"
                }
            ))
            {
                @Html.ValidationSummary()
                @Html.AntiForgeryToken()
                <fieldset>
                    @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control", @placeholder = "Enter First Name", @autocomplate = "off", @type = "text" })
                </fieldset>

                <fieldset>
                    @Html.TextBoxFor(x => x.LastName, new { @class = "form-control", @placeholder = "Enter Last Name", @type = "text" })
                </fieldset>

                @*<fieldset>
                    @Html.TextBoxFor(x => x.Username, new { @class = "form-control", @placeholder = "Enter User Name", @type = "text" })
                    @Html.ValidationMessageFor(x => x.Username, null)
                </fieldset>*@

                <fieldset>
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @placeholder = "Email",  @type = "email" })
                    @Html.ValidationMessageFor(x => x.Email)
                </fieldset>
                <fieldset>
                    @Html.PasswordFor(x => x.Password, new { @class = "form-control", @placeholder = "Enter Password", @type = "password" })
                    @Html.ValidationMessageFor(x => x.Password)
                </fieldset>
                <fieldset>
                    @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control", @placeholder = "Enter Confirm Password" })
                    @Html.ValidationMessageFor(x => x.Password)
                </fieldset>
                <fieldset>
                    @Html.TextBoxFor(x => x.Phone, new { @class = "form-control", @placeholder = "Enter Mobile Number" })
                    @Html.ValidationMessageFor(x => x.Phone)
                </fieldset>
                <fieldset>
                    <button name="submit" type="submit" data-submit="...Sending">Submit</button>
                </fieldset>
            }
        </div>
    </div>
</section>

<script src="~/Themes/das-Admin/assets/js/jquery.js"></script>
<script src="~/Themes/das-Admin/assets/js/bootstrap.bundle.min.js"></script>
<script src="~/Themes/das-Admin/assets/js/waves.js"></script>
<script src="~/Themes/das-Admin/assets/js/feather.js"></script>
<script src="~/Themes/das-Admin/assets/js/simplebar.min.js"></script>
