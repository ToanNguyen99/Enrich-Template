@using Commerce.UI.Models.Catalog
@model IList<ManufacturerBriefInfoModel>
@if (Model.Count > 0)
{
    <div class="manufacturers">
        @if (Model.Count == 1)
        {
        <span class="label">Manufacturer:</span>
        }
        else
        {
        <span class="label">Manufacturers:</span>
        }
        <span class="value">
            @for (var i = 0; i < Model.Count; i++)
            {
                var item = Model[i];
                <a href="">@item.Name</a>
                if (i != Model.Count - 1)
                {
                    <span class="separator">,</span>
                }
            }
        </span>
    </div>
}