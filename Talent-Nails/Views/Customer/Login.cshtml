@using Commerce.UI.Models.Customer
@model LoginModel

@{
    ViewBag.Title = "Login";
    //Layout = null;
}
@section styles
{
    <link href="~/Themes/HomePage/Content/css/Login.css" rel="stylesheet" />
}

<section>
    <div class="contacts__form">
        <div class="container">
            <div class="contacts__form__title">Login</div>
            @using (Html.BeginForm("login", "customer", FormMethod.Post, new { @id = "contact", @autocomplete = "off", @class = "form-horizontal auth-form" }))
            {
                @Html.ValidationSummary()
                @Html.AntiForgeryToken()
                <input type="hidden" name="returnurl" value="@Request.QueryString["returnUrl"]" />
                <fieldset>
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @placeholder = "Email", @autofocus = true })
                    @Html.ValidationMessageFor(x => x.Username, null)
                </fieldset>
                <fieldset>
                    @Html.PasswordFor(x => x.Password, new { @class = "form-control", @placeholder = "Enter Password" })
                </fieldset>

                <fieldset>
                    <button name="submit" type="submit" data-submit="...Sending">Submit</button>
                </fieldset>
            }
        </div>
    </div>
</section>


